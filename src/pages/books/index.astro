---
import Layout from '../../layouts/BookLayout.astro';
import Booklist from '../../components/booklist.astro';

---

<Layout title="Books">
  <Booklist />
</Layout>

<style is:global>
  ul {
    padding: 0;
  }
  li {
    margin-bottom: 1rem;
    font-size: var(--step-3);
  }
  li p, li a {
    margin: 0;
    text-indent: 0;
  }
  li a {
    font-size: var(--step-3);
    color: var(--accent);
    text-decoration-color: var(--accent-fade);
    display: inline-block;
    margin-top: 1rem;
  }
</style>
